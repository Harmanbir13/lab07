<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/background">

    <!-- Title Text -->
    <TextView
        android:id="@+id/textTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter City Name"
        android:textSize="20sp"
        android:textColor="@color/primary_text"
        android:layout_marginBottom="16dp"/>

    <!-- City Name Input -->
    <EditText
        android:id="@+id/editTextCity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="City Name"
        android:textColor="@color/primary_text"
        android:textSize="16sp"
        android:background="@drawable/rounded_input_bg"
        android:padding="12dp"
        android:layout_marginBottom="16dp"/>

    <!-- Get Forecast Button -->
    <Button
        android:id="@+id/buttonGetForecast"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Get Forecast"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:background="@color/button_color"
        android:layout_marginBottom="16dp"/>

    <!-- Weather Information Section -->
    <TextView
        android:id="@+id/textCurrentTemp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Current Temp: "
        android:textSize="18sp"
        android:textColor="@color/secondary_text"
        android:visibility="gone"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:id="@+id/textMaxTemp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Max Temp: "
        android:textSize="18sp"
        android:textColor="@color/secondary_text"
        android:visibility="gone"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:id="@+id/textMinTemp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Min Temp: "
        android:textSize="18sp"
        android:textColor="@color/secondary_text"
        android:visibility="gone"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:id="@+id/textHumidity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Humidity: "
        android:textSize="18sp"
        android:textColor="@color/secondary_text"
        android:visibility="gone"
        android:layout_marginBottom="8dp"/>

    <!-- Weather Icon -->
    <ImageView
        android:id="@+id/imageWeatherIcon"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:visibility="gone"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:id="@+id/textDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Description: "
        android:textSize="18sp"
        android:textColor="@color/secondary_text"
        android:visibility="gone"
        android:layout_marginBottom="8dp"/>

</LinearLayout>
